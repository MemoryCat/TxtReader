<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.memorycat.app.txtreader.file.SelectFileActivity">

    <TextView
        android:id="@+id/asf_currentPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/asf_btnGoHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goHome" />

        <Button
            android:id="@+id/asf_btnGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goBack" />
    </LinearLayout>

    <ListView
        android:id="@+id/asf_listViewFileList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"></ListView>



</LinearLayout>
